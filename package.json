{
  "name": "scout-analytics-dashboard",
  "version": "1.0.0",
  "description": "Enterprise-grade Scout Analytics Dashboard with comprehensive data model, RLS, and full dashboard coverage",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "db:generate-types": "supabase gen types typescript --local > src/types/database.ts",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase migration up",
    "db:seed": "node scripts/seed-database.js",
    "verify": "npm run lint && npm run typecheck && npm run test",
    "deploy": "npm run verify && npm run build && vercel --prod"
  },
  "keywords": [
    "analytics",
    "dashboard",
    "fmcg",
    "philippines",
    "retail",
    "intelligence",
    "ai",
    "visualization",
    "enterprise"
  ],
  "author": "TBWA Philippines",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "@headlessui/react": "^2.2.4",
    "@hookform/resolvers": "^3.3.2",
    "@supabase/supabase-js": "^2.39.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.515.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^7.6.2",
    "recharts": "^2.15.3",
    "tailwindcss": "^4.1.10",
    "uuid": "^11.1.0",
    "yargs": "^18.0.0",
    "zod": "^3.22.4",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "postcss": "^8.5.0",
    "supabase": "^1.123.4",
    "typescript": "^5.6.3",
    "vite": "^6.3.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
